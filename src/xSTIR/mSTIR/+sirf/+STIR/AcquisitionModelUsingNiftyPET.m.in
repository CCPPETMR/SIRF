    properties
    end
    methods
        function self = AcquisitionModelUsingNiftyPET()
%         Creates an AcquisitionModelUsingNiftyPET object.
            self.name = 'AcqModUsingNiftyPET';
            self.handle_ = calllib('mstir', 'mSTIR_newObject', self.name);
            sirf.Utilities.check_status([self.name ':ctor'], self.handle_)
        end
        function delete(self)
            if ~isempty(self.handle_)
                %calllib('mutilities', 'mDeleteDataHandle', self.handle_)
                sirf.Utilities.delete(self.handle_)
                self.handle_ = [];
            end
        end
        function set_cuda_verbosity(self, verbosity)
            % Set CUDA verbosity
            if verbosity
                num = 1;
            else
                num = 0;
            end
            sirf.STIR.setParameter...
                (self.handle_, self.name, ...
                'cuda_verbosity', num, 'i')
        end
    end
end